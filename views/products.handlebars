<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Productos</title>
</head>
<body>
  <h1>Productos Disponibles</h1>

  <ul>
    {{#each products}}
      <li>
        <h2>{{this.nombre}}</h2>
        <p>{{this.descripcion}}</p>
        <p>Precio: ${{this.precio}}</p>
        <p>Stock: {{this.stock}}</p>
        
        <form action="/api/carts/{{user.carrito}}/products/{{this._id}}" method="POST">
          <input type="number" name="quantity" value="1" min="1" max="{{this.stock}}">
          <button type="submit">AÃ±adir al carrito</button>
        </form>
      </li>
    {{/each}}
  </ul>

  <div class="pagination">
    {{#if response.hasPrevPage}}
      <a href="?page={{response.subtract response.currentPage 1}}">Anterior</a>
    {{/if}}

    {{#if response.hasNextPage}}
      <a href="?page={{response.add response.currentPage 1}}">Siguiente</a>
    {{/if}}
  </div>

</body>
</html>
